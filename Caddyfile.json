{
    "apps": {
        "http": {
            "servers": {
                "srv0": {
                    "listen": [":8443"],
                    "routes": [
                        {
                            "handle": [
                                {
                                    "handler": "reverse_proxy",
                                    "upstreams": [
                                        {
                                            "dial": "localhost:8000"
                                        }
                                    ]
                                }
                            ]
                        }
                    ],
                    "tls_connection_policies": [
                        {
                            "certificate_selection": {
                                "any_tag": ["self-signed"]
                            }
                        }
                    ],
                    "automatic_https": {
                        "disable_redirects": true
                    }
                }
            }
        },
        "tls": {
            "automation": {
                "policies": [
                    {
                        "subjects": ["localhost", "127.0.0.1"],
                        "issuers": [
                            {
                                "module": "internal"
                            }
                        ]
                    }
                ]
            }
        }
    }
}
